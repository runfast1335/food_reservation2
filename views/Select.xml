<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="select_act_window" model="ir.actions.act_window">
        <field name="name">select</field>
        <field name="res_model">food_reservation.select</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                خالیه برادر من، خالی?!
            </p>
        </field>
    </record>

    <record id="select_tree_view" model="ir.ui.view">
        <field name="name">food_reservation.tree</field>
        <field name="model">food_reservation.select</field>
        <field name="arch" type="xml">
            <tree>
                <field name="user_id"/>
                <field name="date_id"/>
                <field name="poloyiSelect_id"/>
                <field name="poloyiCheck"/>
                <field name="khorackSelect_id"/>
                <field name="khorackCheck"/>
            </tree>
        </field>
    </record>
    <record id="select_form_view" model="ir.ui.view">
        <field name="name">food_reservation.form</field>
        <field name="model">food_reservation.select</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="user_id"/>
                            <field name="poloyiSelect_id"/>
                            <field name="khorackSelect_id"/>
                        </group>
                        <group>
                            <field name="date_id"/>
                            <field name="poloyiCheck"/>
                            <field name="khorackCheck"/>
                        </group>
                        <group>
                            <button name="get_template" type="object" string="دانلود فایل" class="oe_highlight"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>